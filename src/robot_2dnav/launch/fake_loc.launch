<?xml version="1.0"?>
<launch>
  <master auto="start"/>

  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find robot_2dnav)/map/map.yaml"/>

  <!--- Run fake AMCL -->
  <node name="fake_localizaton" type="fake_localization" pkg="fake_localization">
      <remap from="base_pose_ground_truth" to="/gazebo/base_pose_ground_truth" />
      <param name="base_frame_id" value="/base_link"/>
      <param name="odom_frame_id" value="/odom_combined"/>        
  </node>
</launch>